      "put": {
        "tags": [
          "Device OpenVPN Client"
        ],
        "summary": "Assign OpenVPN client to device",
        "description": "Associate an OpenVPN client with a device. Only devices of type 'Router' can be assigned an OpenVPN client. Each device can only have one OpenVPN client, and each OpenVPN client can only be assigned to one device.",
