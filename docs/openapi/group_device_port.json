  "components": {
    "schemas": {
      "DevicePort": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Device port unique identifier",
            "example": "880e8400-e29b-41d4-a716-446655440003"
          },
          "device_id": {
            "type": "string",
            "format": "uuid",
            "description": "Parent device identifier",
            "example": "660e8400-e29b-41d4-a716-446655440001"
          },
          "port_interface_id": {
            "type": "string",
            "format": "uuid",
            "description": "Port interface type identifier",
            "example": "990e8400-e29b-41d4-a716-446655440004"
          },
          "port_specification_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true,
            "description": "Port specification identifier",
            "example": "aa0e8400-e29b-41d4-a716-446655440005"
          },
          "name": {
            "type": "string",
            "description": "Port name",
            "maxLength": 255,
            "example": "GigabitEthernet0/1"
          },
          "position": {
            "type": "integer",
            "nullable": true,
            "description": "Physical position of the port",
            "minimum": 0,
            "example": 1
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether the port is enabled",
            "example": true
          },
          "properties": {
            "type": "object",
            "description": "Additional port properties",
            "example": {
              "speed": "1000Mbps",
              "duplex": "full",
              "vlan": "100"
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp",
            "example": "2025-01-15T10:30:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp",
            "example": "2025-01-15T14:45:00Z"
          },
          "device": {
            "allOf": [
              {
                "$ref": "#/components/schemas/Device"
              }
            ],
            "nullable": true,
            "description": "Associated device information"
          },
          "port_interface": {
            "allOf": [
              {
                "$ref": "#/components/schemas/DevicePortInterface"
              }
            ],
            "nullable": true,
            "description": "Associated port interface information"
          },
          "port_specification": {
            "allOf": [
              {
                "$ref": "#/components/schemas/DevicePortSpecification"
              }
            ],
            "nullable": true,
            "description": "Associated port specification information"
          }
        },
        "required": [
          "id",
          "device_id",
          "port_interface_id",
          "name",
          "enabled",
          "properties",
          "created_at",
          "updated_at"
        ]
      },
      "DevicePortCreateRequest": {
        "type": "object",
        "required": [
          "name",
          "port_interface_id"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Port name (sanitized, max 255 characters, required)",
            "maxLength": 255,
            "minLength": 1,
            "example": "GigabitEthernet0/1"
          },
          "port_interface_id": {
            "type": "string",
            "format": "uuid",
            "description": "Valid port interface UUID (required)",
            "example": "990e8400-e29b-41d4-a716-446655440004"
          },
          "port_specification_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true,
            "description": "Optional port specification UUID",
            "example": "aa0e8400-e29b-41d4-a716-446655440005"
          },
          "position": {
            "type": "integer",
            "nullable": true,
            "description": "Physical position (must be >= 0)",
            "minimum": 0,
            "example": 1
          },
          "enabled": {
            "type": "boolean",
            "nullable": true,
            "description": "Port enabled status (defaults to true)",
            "example": true
          },
          "properties": {
            "type": "object",
            "nullable": true,
            "description": "Additional port properties (defaults to {})",
            "example": {
              "speed": "1000Mbps",
              "duplex": "full"
            }
          }
        }
      },
      "DevicePortUpdateRequest": {
        "type": "object",
        "required": [
          "name",
          "port_interface_id",
          "enabled"
