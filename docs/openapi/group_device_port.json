          "port_specification_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true,
            "description": "Optional port specification UUID",
            "example": "aa0e8400-e29b-41d4-a716-446655440005"
          },
          "position": {
            "type": "integer",
            "nullable": true,
            "description": "Physical position (must be >= 0)",
            "minimum": 0,
            "example": 1
          },
          "enabled": {
            "type": "boolean",
            "description": "Port enabled status (required)",
            "example": true
          },
          "properties": {
            "type": "object",
            "nullable": true,
            "description": "Additional port properties (defaults to {})",
            "example": {
              "speed": "1000Mbps",
              "duplex": "full",
              "vlan": "100"
            }
          }
        }
