  "components": {
    "schemas": {
      "DeviceConnection": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Device connection unique identifier",
            "example": "bb0e8400-e29b-41d4-a716-446655440006"
          },
          "from_port_id": {
            "type": "string",
            "format": "uuid",
            "description": "Source port identifier",
            "example": "880e8400-e29b-41d4-a716-446655440003"
          },
          "to_port_id": {
            "type": "string",
            "format": "uuid",
            "description": "Destination port identifier",
            "example": "880e8400-e29b-41d4-a716-446655440007"
          },
          "details": {
            "type": "object",
            "description": "Additional connection details",
            "example": {
              "cable_type": "fiber",
              "cable_length": "10m",
              "installation_date": "2025-01-10"
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp",
            "example": "2025-01-15T10:30:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp",
            "example": "2025-01-15T14:45:00Z"
          },
          "from_port": {
            "allOf": [
              {
                "$ref": "#/components/schemas/DevicePort"
              }
            ],
            "nullable": true,
            "description": "Source port information"
          },
          "to_port": {
            "allOf": [
              {
                "$ref": "#/components/schemas/DevicePort"
              }
            ],
            "nullable": true,
            "description": "Destination port information"
          }
        },
        "required": [
          "id",
          "from_port_id",
          "to_port_id",
          "details",
          "created_at",
          "updated_at"
        ]
      },
      "DeviceConnectionCreateRequest": {
        "type": "object",
        "required": [
          "from_port_id",
          "to_port_id"
        ],
        "properties": {
          "from_port_id": {
            "type": "string",
            "format": "uuid",
            "description": "Source port UUID (required, must be valid UUID)",
            "example": "880e8400-e29b-41d4-a716-446655440003"
          },
          "to_port_id": {
            "type": "string",
            "format": "uuid",
            "description": "Destination port UUID (required, must be valid UUID, must be different from from_port_id)",
            "example": "880e8400-e29b-41d4-a716-446655440007"
          },
          "details": {
            "type": "object",
            "nullable": true,
            "description": "Additional connection details (defaults to {})",
            "example": {
              "cable_type": "fiber",
              "cable_length": "10m"
            }
          }
        }
      },
      "DeviceConnectionUpdateRequest": {
        "type": "object",
        "required": [
          "from_port_id",
          "to_port_id"
        ],
        "properties": {
          "from_port_id": {
            "type": "string",
            "format": "uuid",
            "description": "Source port UUID (required, must be valid UUID)",
            "example": "880e8400-e29b-41d4-a716-446655440003"
          },
          "to_port_id": {
            "type": "string",
            "format": "uuid",
            "description": "Destination port UUID (required, must be valid UUID, must be different from from_port_id)",
            "example": "880e8400-e29b-41d4-a716-446655440007"
          },
          "details": {
            "type": "object",
            "nullable": true,
            "description": "Additional connection details (defaults to {})",
            "example": {
              "cable_type": "fiber",
              "cable_length": "10m",
              "installation_date": "2025-01-10"
            }
          }
        }
      },
      "DevicePort": {
        "type": "object",
        "description": "Device port entity reference"
      }
    },
