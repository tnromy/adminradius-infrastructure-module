  "components": {
    "schemas": {
      "OpenvpnServer": {
        "type": "object",
        "description": "OpenVPN server configuration entity",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier (UUIDv7)",
            "example": "019a34a2-cb9e-78ad-a4be-b2e83a1ff440"
          },
          "name": {
            "type": "string",
            "description": "OpenVPN server name (unique)",
            "maxLength": 255,
            "example": "server.racenet.openvpn.adminradius.com"
          },
          "host": {
            "type": "string",
            "description": "Server hostname or IP address",
            "maxLength": 45,
            "example": "192.168.23.2"
          },
          "port": {
            "type": "integer",
            "description": "OpenVPN server port",
            "minimum": 1,
            "maximum": 65535,
            "example": 1194
          },
          "proto": {
            "type": "string",
            "description": "Protocol (tcp or udp)",
            "enum": ["tcp", "udp"],
            "example": "tcp"
          },
          "cipher": {
            "type": "string",
            "nullable": true,
            "description": "Encryption cipher algorithm",
            "maxLength": 50,
            "example": "AES-256-CBC"
          },
          "auth_algorithm": {
            "type": "string",
            "description": "Authentication algorithm",
            "maxLength": 50,
            "example": "SHA256"
          },
          "tls_key_pem": {
            "type": "string",
            "nullable": true,
            "description": "TLS authentication key in PEM format",
            "example": "-----BEGIN OpenVPN Static key V1-----\\n...\\n-----END OpenVPN Static key V1-----"
          },
          "tls_key_mode": {
            "type": "string",
            "nullable": true,
            "description": "TLS key mode (0, 1, or null)",
            "maxLength": 10,
            "example": "1"
          },
          "ca_chain_pem": {
            "type": "string",
            "description": "CA certificate chain in PEM format (auto-generated, contains Root CA + Intermediate CA)",
            "example": "-----BEGIN CERTIFICATE-----\\n...\\n-----END CERTIFICATE-----"
          },
          "certificate_pem": {
            "type": "string",
            "description": "Server certificate in PEM format (auto-generated, the server's own certificate)",
            "example": "-----BEGIN CERTIFICATE-----\\n...\\n-----END CERTIFICATE-----"
          },
          "serial_number": {
            "type": "integer",
            "format": "int64",
            "description": "Certificate serial number from CA (unique)",
            "example": 1234567890
          },
          "expired_at": {
            "type": "string",
            "format": "date-time",
            "description": "Certificate expiration timestamp",
            "example": "2026-10-30T09:00:00Z"
          },
          "remote_cert_tls_name": {
            "type": "string",
            "description": "Remote certificate TLS name verification",
            "maxLength": 100,
            "example": "server"
          },
          "crl_distribution_point": {
            "type": "string",
            "nullable": true,
            "description": "Certificate Revocation List distribution URL",
            "maxLength": 1000,
            "example": "http://ca.certy.id/racenet-openvpn/crl.pem"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp",
            "example": "2025-10-30T09:00:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp",
            "example": "2025-10-30T09:00:00Z"
          }
        },
        "required": [
          "id",
          "name",
          "host",
          "port",
          "proto",
          "auth_algorithm",
          "ca_chain_pem",
          "certificate_pem",
          "serial_number",
          "expired_at",
          "remote_cert_tls_name",
          "created_at",
          "updated_at"
        ]
      },
      "OpenvpnServerCreateRequest": {
        "type": "object",
        "description": "Request body for creating a new OpenVPN server. Certificate-related fields (ca_chain_pem, certificate_pem, encrypted_private_key_pem) are auto-generated by the CA service.",
        "required": [
          "name",
          "host"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "OpenVPN server name (sanitized, max 255 characters, required, must be unique)",
            "maxLength": 255,
            "minLength": 1,
            "example": "vpn-server-01.example.com"
          },
          "host": {
            "type": "string",
            "description": "Server hostname or IP address (sanitized, max 45 characters, required)",
            "maxLength": 45,
            "minLength": 1,
            "example": "10.0.1.100"
          },
          "port": {
            "type": "integer",
            "description": "OpenVPN server port (default: 1194)",
            "minimum": 1,
            "maximum": 65535,
            "default": 1194,
            "example": 1194
          },
          "proto": {
            "type": "string",
            "description": "Protocol - tcp or udp (default: udp)",
            "enum": ["tcp", "udp"],
            "default": "udp",
            "example": "tcp"
          },
          "cipher": {
            "type": "string",
            "nullable": true,
            "description": "Encryption cipher algorithm (optional, max 50 characters)",
            "maxLength": 50,
            "example": "AES-256-GCM"
          },
          "auth_algorithm": {
            "type": "string",
            "description": "Authentication algorithm (default: SHA256, max 50 characters)",
            "maxLength": 50,
            "default": "SHA256",
            "example": "SHA256"
          },
          "tls_key_pem": {
            "type": "string",
            "nullable": true,
            "description": "TLS authentication key in PEM format (optional)",
            "example": "-----BEGIN OpenVPN Static key V1-----\\n...\\n-----END OpenVPN Static key V1-----"
          },
          "tls_key_mode": {
            "type": "string",
            "nullable": true,
            "description": "TLS key mode (optional)",
            "maxLength": 10,
            "example": "1"
          },
          "remote_cert_tls_name": {
            "type": "string",
            "description": "Remote certificate TLS name verification (default: server, max 100 characters)",
            "maxLength": 100,
            "default": "server",
            "example": "server"
          },
          "crl_distribution_point": {
            "type": "string",
            "nullable": true,
            "description": "Certificate Revocation List distribution URL (optional, max 1000 characters)",
            "maxLength": 1000,
            "example": "http://ca.example.com/crl.pem"
          }
        }
      },
      "OpenvpnServerUpdateRequest": {
        "type": "object",
        "description": "Request body for updating an OpenVPN server. Note: name, ca_chain_pem, and encrypted_private_key_pem are immutable and cannot be modified.",
        "required": [
          "host",
          "port",
          "proto",
          "auth_algorithm",
          "remote_cert_tls_name"
        ],
        "properties": {
          "host": {
            "type": "string",
            "description": "Server hostname or IP address (sanitized, max 45 characters, required)",
            "maxLength": 45,
            "minLength": 1,
            "example": "10.0.1.101"
          },
          "port": {
            "type": "integer",
            "description": "OpenVPN server port (required)",
            "minimum": 1,
            "maximum": 65535,
            "example": 1194
          },
          "proto": {
            "type": "string",
            "description": "Protocol - tcp or udp (required)",
            "enum": ["tcp", "udp"],
            "example": "udp"
          },
          "cipher": {
            "type": "string",
            "nullable": true,
            "description": "Encryption cipher algorithm (optional, max 50 characters)",
            "maxLength": 50,
            "example": "AES-256-GCM"
          },
          "auth_algorithm": {
            "type": "string",
            "description": "Authentication algorithm (required, max 50 characters)",
            "maxLength": 50,
            "example": "SHA256"
          },
          "tls_key_pem": {
            "type": "string",
            "nullable": true,
            "description": "TLS authentication key in PEM format (optional)",
            "example": "-----BEGIN OpenVPN Static key V1-----\\n...\\n-----END OpenVPN Static key V1-----"
          },
          "tls_key_mode": {
            "type": "string",
            "nullable": true,
            "description": "TLS key mode (optional)",
            "maxLength": 10,
            "example": "1"
          },
          "remote_cert_tls_name": {
            "type": "string",
            "description": "Remote certificate TLS name verification (required, max 100 characters)",
            "maxLength": 100,
            "example": "server"
          },
          "crl_distribution_point": {
            "type": "string",
            "nullable": true,
            "description": "Certificate Revocation List distribution URL (optional, max 1000 characters)",
            "maxLength": 1000,
            "example": "http://ca.example.com/crl.pem"
          }
        }
      }
    },
